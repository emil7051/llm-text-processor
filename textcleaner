#!/bin/bash

# Script that provides a snappy command for the TextCleaner
# This allows running the processor with a simple command like:
# textcleaner process mydocs/

# Activate the virtual environment (if it exists)
if [ -f "$(dirname "$0")/venv/bin/activate" ]; then
    source "$(dirname "$0")/venv/bin/activate"
fi

# Run the CLI with all arguments passed to this script
python -c "from textcleaner.cli import main; main()" "$@"
